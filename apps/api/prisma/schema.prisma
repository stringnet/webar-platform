generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "alpine-linux-musl"] // <-- AÑADE ESTA LÍNEA
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
