generator client {
  provider = "prisma-client-js"
  // CORRECCIÃ“N FINAL: Le decimos a Prisma que use el motor para Debian con OpenSSL 3.0.x
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
